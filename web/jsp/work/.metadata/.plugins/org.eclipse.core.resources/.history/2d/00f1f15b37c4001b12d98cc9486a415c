package dao;

import static db.JdbcUtil.*;
import javax.sql.*;
import java.sql.*;
import java.util.*;
import vo.*; 

public class MemberDao {
// 회원 관련 DB작업을 실제로 처리하는 메소드들을 담은 클래스
	private static MemberDao memberDao; 
	private Connection conn;
	private MemberDao() {} 
	
	public static MemberDao getInstance() {
		if (memberDao == null)	memberDao = new MemberDao(); 
		return memberDao;
	}
	public void setConnection(Connection conn) { 
		this.conn = conn; 
	} 
	
	public int memberJoin(MemberInfo memberInfo) {
		PreparedStatement pstmt = null;
		int result = 0;
		
		try {
			String sql = "insert into t_member_info (mi_id, mi_pwd, mi_name, " +
		"mi_birth, mi_gender, mi_phone, mi_email, mi_issns, mi_ismail, " +
		"mi_point) values (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)";
		} catch (Exception e) {
			System.out.prinln("memberJoin() 메소드 오류");
			e.printStackTrace();
		} finally {
			close(pstmt);
		}
		
		return result;
	}
}
